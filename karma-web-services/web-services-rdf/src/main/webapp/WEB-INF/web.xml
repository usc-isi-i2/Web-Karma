<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>RDF Generator Web Service</display-name>
  <listener>
	  	<listener-class>
	  		edu.isi.karma.web.services.rdf.RDFGeneratorServlet
	  	</listener-class>
	 </listener>
	  
  <servlet>
    	<servlet-name>RDFGeneratorServlet</servlet-name>
    	<servlet-class>
    	    com.sun.jersey.spi.container.servlet.ServletContainer
    	</servlet-class>
    	<init-param>
    	    <param-name>com.sun.jersey.config.property.packages</param-name>
    	    <param-value>edu.isi.karma.web.services.rdf</param-value>
    	</init-param>
    	
		<load-on-startup>1</load-on-startup>
	</servlet>

	
  <servlet-mapping>
    <servlet-name>RDFGeneratorServlet</servlet-name>
    <url-pattern>/rdf/*</url-pattern>
  </servlet-mapping>
  
</web-app>
